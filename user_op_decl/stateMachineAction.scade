node stateMachineAction(ival1, ival2 : int8)
  returns (ival3 : int8 default = 42)
let
  automaton SM1
    initial state State1
      unless
        if true
          do let 
				ival3 = ival1 + ival2; 
			 tel restart State2;
      let
      tel

    state State2
      let
      tel
      until
        if true do 
			let 
				ival3 = 42; 
			tel restart State1;
  returns ..;
tel